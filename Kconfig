menu "RevK"

	config REVK_APPNAME
	string "Override app name"
	default ""
	help
		Default app name to use

	config REVK_WIFISSID
	string "Default WiFi SSID"
	default "IoT"
	help
		This defines the factory reset default WiFi SSID

	config REVK_WIFIPASS
	string "Default WiFi passphrase"
	default "security"
	help
		This defines the factory reset default WiFi passphrase

	config REVK_MQTTHOST
	string "Default MQTT host"
	default "mqtt.iot"
	help
		This defines the factory reset default MQTT host (insecure)

	config REVK_OTAHOST
	string "Default OTA host"
	default "ota.iot"
	help
		This defines the factory reset default OTA host (https)

	config REVK_NTPHOST
	string "Default NTP host"
	default "pool.ntp.org"
	help
		This defines the factory reset default NTP host

	config REVK_TZ
	string "Default TZ (timezone)"
	default "GMT+0BST,M3.5.0,M10.5.0"
	help
		This defines the TZ (timezone) control

	config REVK_APMODE
        bool "Access point mode"
        default y
        help
		Enable AP (Access point) mode for base settings

	config REVK_APPORT
	int "Default AP mode port"
	depends on REVK_APMODE
	default 81
	help
		The TCP port for web setup page in AP mode

	config REVK_APWAIT
	int "Default AP mode delay"
	depends on REVK_APMODE
	default 60
	help
		Default time for starting AP mode

	config REVK_APTIME
	int "Default AP active time"
	depends on REVK_APMODE
	default 300
	help
		Default time for AP mode

	config REVK_APGPIO
	int "Default AP mode GPIO port"
	depends on REVK_APMODE
	default 0
	help
		Default GPIO port monitored to start AP mode

	config REVK_WIFIREST
	int "Reset if WiFi goes off"
	default 0
	help
		Time (seconds) before reset after WiFi goes off line

	config REVK_MQTTRESET
	int "Reset if off line from MQTT for a time"
	default 3600
	help
		Time (seconds) before reset if offline

endmenu
